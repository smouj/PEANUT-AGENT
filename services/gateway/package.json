    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.0.4",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
